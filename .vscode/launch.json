    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--reload"
            ],
            "jinja": true,
            "envFile": "${workspaceFolder}/.env.local"
        },
        {
            "name": "DB Update",
            "type": "debugpy",
            "request": "launch",
            "module": "package.db_migration.run_migrations",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "envFile": "${workspaceFolder}/.env.local"
        },
    ]
}